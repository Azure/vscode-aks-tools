        "omsWorkspaceId": {
            "defaultValue": "/subscriptions/0c8875c7-e423-4caa-827a-1f0350bd8dd3/resourceGroups/DefaultResourceGroup-WUS2/providers/Microsoft.OperationalInsights/workspaces/DefaultWorkspace-0c8875c7-e423-4caa-827a-1f0350bd8dd3-WUS2",
