// See https://go.microsoft.com/fwlink/?LinkId=733558
// for the documentation about the tasks.json format
{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dev:webview",
            "type": "npm",
            "script": "dev:webview",
            "problemMatcher": [
                {
                    "fileLocation": "absolute",
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": "^.* page reload .*",
                        "endsPattern": "^.*\\[TypeScript\\].*"
                    },
                    "pattern": [
                        {
                            "regexp": "^ (ERROR|WARNING)\\(TypeScript\\)  (.*)",
                            "severity": 1,
                            "message": 2
                        },
                        {
                            "regexp": "^ FILE  (.*):(\\d*):(\\d*)$",
                            "file": 1,
                            "line": 2,
                            "column": 3
                        }
                    ]
                }
            ],
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            }
        }
    ]
}